ni-s-between\">\n      <p class=\"countTxt\">{{countTxt}}</p>\n      <el-button\n        class=\"add-item-btn\"\n        type=\"primary\"\n        size=\"mini\"\n        icon=\"el-icon-copy-document\"\n        v-clipboard:copy=\"value\"\n        @click=\"handleCopy\"\n      >复制</el-button>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  props: {\n    value: {\n      type: String,\n      default: \"\"\n    },\n    title: {\n      type: String,\n      default: \"\"\n    }\n  },\n  data: function() {\n    return {\n      inputTxt: \"\",\n      countTxt: \"0 个字符, 0 个单词\"\n    };\n  },\n  watch: {\n    value(val) {\n      this._updateUI(val);\n    }\n  },\n  methods: {\n    handleCopy() {\n      if (this.value) {\n        this.$message({\n          message: \"复制成功\",\n          type: \"success\"\n        });\n      }\n    },\n    handleInput(vl) {\n      let value = vl.target.value;\n      this._updateUI(value);\n      this.$emit(\"input\", value);\n    },\n    _updateUI(vl) {\n      let value = vl.trim();\n      value = value.replace(/\\n/g, \" \");\n      let characterCount = value.length;\n      value = value.replace(/\\s+/g, \" \");\n      let words = value ? value.split(\" \").length : 0;\n      this.countTxt = `${characterCount} 个字符，${words} 个单词`;\n    }\n  }\n};\n</script>\n\n<style lang=\"less\" scoped>\n.textarea {\n  margin-top: 8px;\n  margin-bottom: 4px;\n  width: 100%;\n  height: 50vh;\n}\n.countTxt {\n  font-size: 12px;\n}\n</style>"]}]}